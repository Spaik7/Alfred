# Alfred Voice Assistant - Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
NEWS_API_KEY=your_newsapi_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
SPOONACULAR_API_KEY=your_spoonacular_api_key_here

# SSH Configuration (for Mac integration - Phase 2)
# Pi SSH credentials
SSH_PI_HOST=192.168.1.x
SSH_PI_USER=your_pi_username
SSH_PI_PASSWORD=your_pi_password

# Mac SSH credentials
SSH_MAC_HOST=192.168.1.x
SSH_MAC_USER=your_mac_username
SSH_MAC_PASSWORD=your_mac_password

# Ollama Configuration
OLLAMA_HOST=localhost:11434

# Whisper Docker (if using Docker Whisper)
WHISPER_DOCKER_HOST=localhost:9999

# Default Location (for weather, etc.)
DEFAULT_LOCATION=YourCity

# Finance Watchlist (comma-separated stock symbols)
FINANCE_WATCHLIST=AAPL,GOOGL,MSFT,TSLA

# Response Configuration
RESPONSE_MODE=ai
AI_MODEL=alfred-response
